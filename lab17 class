import java.util.Scanner;
public class April29 
{
  private static int numberofroll = 0;
  
  
  public int RollDice(int dice)
  {
  	int number;
  	number = dice * 6;
  	return 1 + (int) (Math.random() * number);
  }
  
  static int Roll_1_Dice()
  {

  	return (1 + (int) (Math.random() * 6));
  	
  }
  static int Dice(int dice, int max)
  {
  	numberofroll += dice;
  	
  	int number;
  	
  	number = dice * max;
  	return 1 + (int) (Math.random() * number);
  
  }
  public int RollCount()
  {
  	return numberofroll;
  }
}
